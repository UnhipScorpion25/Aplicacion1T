<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAtras"
    tools:context="com.platzi.aplicacion1t.PrincipalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Imagen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/button_du_juego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para cuando jueges"
                    android:layout_marginTop="60dp"
                    android:theme="@style/RaisedButtonDark" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="60dp"
                    android:text="@string/foto_text"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomala"
                    android:theme="@style/RaisedButtonDark" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Registro de partidas"
                    android:theme="@style/RaisedButtonDark"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
